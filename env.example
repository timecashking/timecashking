# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL="postgresql://username:password@localhost:5432/timecash_king"
DIRECT_URL="postgresql://username:password@localhost:5432/timecash_king"

# ========================================
# CONFIGURAÇÕES JWT
# ========================================
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ========================================
# CONFIGURAÇÕES GOOGLE OAUTH
# ========================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/oauth/google/callback"

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@timecashking.com"

# ========================================
# CONFIGURAÇÕES DO FRONTEND
# ========================================
NEXT_PUBLIC_API_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3001"

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
CORS_ORIGIN="http://localhost:3001,https://yourdomain.com"
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL="info"
LOG_PRETTY_PRINT="true"

# ========================================
# CONFIGURAÇÕES DE CRON
# ========================================
CRON_ENABLED="true"
CRON_TIMEZONE="America/Sao_Paulo"

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
NOTIFICATIONS_ENABLED="true"
PUSH_NOTIFICATIONS="false"
